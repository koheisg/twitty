.login
  = form_for(@user, url: login_path) do |f|
    - if @user.errors.any?
      #error_explanation
        %h2
          = pluralize(@user.errors.count, "error")
          prohibited this user from being saved:
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
    .login--field
      = f.label :name
      = f.text_field :name
    .login--field
      = f.label :password
      = f.password_field :password
    = f.submit class: "login--button"
